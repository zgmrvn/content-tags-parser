<%= form_with model: @article, local: true, class: ['form-group'] do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, 'error') %> prohibited this
        article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :title, placeholder: 'Your title...', class: ['form-control', 'mb-2'] %>

  <%= form.text_area :content, placeholder: 'Your text...', rows: 10, class: ['form-control', 'mb-3'] %>

  <div class="text-center" role="group">
    <%= link_to 'Articles', { action: :index }, { class: ['btn', 'btn-primary'] } %>
    <%= form.submit class: ['btn', 'btn-success'] %>
  </div>
<% end %>
